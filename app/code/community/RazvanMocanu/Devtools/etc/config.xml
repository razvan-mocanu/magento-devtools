<?xml version="1.0"?>
<config>
    <modules>
        <RazvanMocanu_Devtools>
            <version>0.0.5</version>
        </RazvanMocanu_Devtools>
    </modules>
    <global>
        <models>
            <razvanMocanu_devtools>
                <class>RazvanMocanu_Devtools_Model</class>
            </razvanMocanu_devtools>
        </models>
        <helpers>
            <devtools>
                <class>RazvanMocanu_Devtools_Helper</class>
            </devtools>
        </helpers>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <RazvanMocanu_Devtools_Model_Observer>
                        <type>singleton</type>
                        <class>razvanMocanu_devtools/observer</class>
                        <method>highlightBlocks</method>
                    </RazvanMocanu_Devtools_Model_Observer>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <devtools_options>
                                            <title>Razvan Mocanu Devtools</title>
                                        </devtools_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>