<?xml version="1.0"?>
<config>
    <modules>
        <RazvanMocanu_Devtools>
            <version>1.0.2</version>
        </RazvanMocanu_Devtools>
    </modules>
    <global>
        <models>
            <razvanMocanu_devtools>
                <class>RazvanMocanu_Devtools_Model</class>
            </razvanMocanu_devtools>
        </models>
        <helpers>
            <devtools>
                <class>RazvanMocanu_Devtools_Helper</class>
            </devtools>
        </helpers>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <RazvanMocanu_Devtools_Model_Observer>
                        <type>singleton</type>
                        <class>razvanMocanu_devtools/observer</class>
                        <method>highlightBlocks</method>
                    </RazvanMocanu_Devtools_Model_Observer>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <devtools_options>
                                            <title>Razvan Mocanu Devtools</title>
                                        </devtools_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <devtools_options>
            <block_info_settings>
                <block_info_enabled>1</block_info_enabled>
                <block_info_enabled_admin>0</block_info_enabled_admin>
                <tag_select>comment</tag_select>
                <show_block_name>1</show_block_name>
                <show_block_template>1</show_block_template>
                <show_block_data>0</show_block_data>
                <show_cms_data>1</show_cms_data>
                <show_on_hover>0</show_on_hover>
                <show_empty_blocks>1</show_empty_blocks>
                <show_layout_handles>1</show_layout_handles>
            </block_info_settings>
        </devtools_options>
    </default>
</config>
